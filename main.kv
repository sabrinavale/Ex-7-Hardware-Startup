<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()

    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id: test3
        active: True
        text: "On"
        size: 100, 100
        x: root.width * 0.6
        y: root.height * 0.2
        color: 0.1, 0.1, 0.8, 1
        on_press: root.text_change()

    DPEAButton:
        id: test5
        text: "motor clockwise"
        size: 200, 100
        x: root.width * 0.8
        y: root.height * 0.2
        color: 0.5, 0.1, 0.8, 1
        on_press: root.motor_change_direction()

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'vertical'
        center_x: root.width * 0.1
        center_y: root.height * 0.5

    Label:
        text: str(slider.value)
        size_hint: None, None
        font_size: 20
        center_x: root.width * 0.1
        center_y: root.height * 0.5
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id: test4
        text: '0'
        size: 100, 100
        x: root.width * 0.7
        y: root.height * 0.8
        color: 0.5, 0.1, 0.8, 1
        on_press: root.increase()

<NewScreen>:
    name: 'new'

    Button:
        id: img
        size_hint: None, None
        size: 200, 200
        center_x: root.width * 0.4
        center_y: root.height * 0.2
        background_normal: 'cutepic.jpg'
        on_press: root.image()